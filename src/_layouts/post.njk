---
layout: base.njk
date: git Last Modified
---
<section id="metadata" class="mt-6 mx-6 lg:mt-0 lg:mx-auto max-w-prose {% if thumb %}mt-6{% endif %}">
  <ul class="flex flex-wrap items-center list-none -mt-0.5 mx-auto mb-6 max-w-screen-xl">
    <li class="justify-end mr-4"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">Last updated: {{ page.date | readableDate }}</time></li>
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-flex items-center h-10"><a href="{{ tagUrl }}" class="post-tag relative block text-sm">{{ tag }}</a></li>
    {%- endfor %}
  </ul>
</section>
<article id="main" class="mx-6 md:mx-0">
  <div class="max-w-prose mx-auto posttextBlock">
      {{ content | safe }}
  </div>
  <footer id="endnotes" role="footnotes"></footer>
</article>
<section id="post-nav" class="max-w-prose mx-6 md:mx-auto">
  <ul
    class="flex flex-col lg:items-center text-sm gap-2 py-8 sm:my-0 sm:flex-row sm:gap-8 sm:justify-start"
  >
    {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
    {%- if previousPost %}
    <li id="previousPost" class="flex sm:w-full items-center min-w-max h-10">
      <div class="flex flex-col w-full md:justify-start">
        <p class="text-xs">Previous post</p>
        <div class="flex w-full items-center md:flex-row md:justify-start">
          <ion-icon name="arrow-back-outline"></ion-icon>
          <a href="{{ previousPost.url }}" class="displayFont">{{ previousPost.data.title }}</a>
        </div>
        </div>
      </li>
    {% endif %}
    {%- if nextPost %}
    <li id="nextPost" class="flex items-center min-w-max h-10">
      <div class="flex flex-col w-full md:justify-start">
        <p class="text-xs">Next post</p>
        <div class="flex w-full items-center md:flex-row md:justify-start">
          <a href="{{ nextPost.url }}" class="displayFont">{{ nextPost.data.title }}</a>
          <ion-icon name="arrow-forward-outline"></ion-icon>
        </div>
        </div>
      </li>
    {% endif %}
    {%- endif %}
    {%- endif %}
  </ul>
</section>