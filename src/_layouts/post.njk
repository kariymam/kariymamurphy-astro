---
layout: home.njk
date: Created
---
<section class="w-full md:px-6">
  <ul class="w-full flex flex-wrap items-center gap-2 list-none px-6 border-2 rounded-3xl -mt-0.5">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
    {%- endfor %}
    <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
  </ul>
</section>
<article id="main">
  <div class="max-w-prose mx-auto px-6 posttextBlock">
    <hr class="my-6">
      <div class="sm:relative sm:max-w-md sm:float-right">
        {% if thumb %}
        <figure class="flex flex-col p-6">
          {% image thumb, thumbAlt, "thumbImg w-full h-full top-0 flex  object-cover inset-0" %}
          <figcaption class="text-sm opacity-70">{{ thumbAlt }}</figcaption>
        </figure>
        {% endif %}
      </div>
      {{ content | safe }}
    <hr class="my-6">
  </div>
</article>
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
{%- if previousPost %}
<section class="textblock w-full">
  <div class="flex flex-col gap-4 md:flex-row md:mx-6 p-6 -mt-0.5 border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
            <div class="w-full"><ion-icon name="arrow-back-outline" class="align-middle"></ion-icon> <a href="{{ previousPost.url }}" class="py-4">{{ previousPost.data.title }}</a></div>
          </section>
{% endif %}
{%- if nextPost %}
<section class="textblock w-full">
  <div class="flex flex-col gap-4 md:flex-row md:mx-6 p-6 -mt-0.5 border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
    <div class="w-full md:text-end"><a href="{{ nextPost.url }}" class="py-4">{{ nextPost.data.title }} <ion-icon name="arrow-forward-outline" class="align-middle"></ion-icon></a></div>
  </div>
</section>
{% endif %}
{%- endif %}
{%- endif %}