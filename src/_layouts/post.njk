---
layout: home.njk
date: Created
---
<article id="main" class="mx-auto">
  <div class="max-w-prose px-6 posttextBlock">
    <hr class="my-6">
      <div class="sm:relative sm:max-w-md sm:float-right">
        {% if thumb %}
        <figure class="flex flex-col p-6">
          {% image thumb, thumbAlt, "thumbImg w-full h-full top-0 flex  object-cover inset-0" %}
          <figcaption class="text-sm opacity-70">{{ thumbAlt }}</figcaption>
        </figure>
        {% endif %}
      </div>
      {{ content | safe }}
    <hr class="my-6">
  </div>
</article>
<section class="textblock w-full">
  {%- if collections.posts %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <div class="flex flex-col gap-4 md:flex-row md:mx-6 p-6 -mt-0.5 border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
    {%- if previousPost %}
            <div class="w-full">Previous: <a href="{{ previousPost.url }}" class="py-4">{{ previousPost.data.title }}</a></div>
                {% endif %}
    {%- if nextPost %}
    <div class="w-full md:text-end">Next: <a href="{{ nextPost.url }}" class="py-4">{{ nextPost.data.title }}<ion-icon name="arrow-forward-outline" class="align-middle"></ion-icon></a></div>
              {% endif %}
  </div>
  {%- endif %}
  {%- endif %}
</section>