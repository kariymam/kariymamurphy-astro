---
layout: base.njk
date: git Last Modified
---
{%- set previousPost = collections.post | getPreviousCollectionItem %}
{%- set nextPost = collections.post | getNextCollectionItem %}
{%- if previousPost %}
<div class="flex">
  <div class="flex flex-col w-full md:justify-start">
    <p class="text-xs mb-4 opacity-70">Previous post</p>
    <div class="flex w-full items-center md:flex-row md:justify-start">
      <ion-icon name="arrow-back-outline"></ion-icon>
      <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
    </div>
  </div>
  <button id="slideBack" title="Previous" aria-controls="latestPostsList" class="h-[68px] bg-[var(--primary)] rounded-full md:hover:translate-x-[-0.5rem] transition-transform">
    <ion-icon name="arrow-back-outline" aria-labelledby="backBtn" class="text-4xl text-[var(--text-color-link-active)] m-2 p-2"></ion-icon>
  </button>
  <div id="backBtn" class="sr-only">Slide to the left</div>
</div>
{% endif %}
  <article id="main" class="mx-6 md:mx-0 max-w-prose lg:mx-auto">
    <section id="metadata" class="relative flex flex-col lg:flex-row">
      <div class="max-w-sm">
        <p class="text-xs mb-4 opacity-70">Table of contents</p>
        {{ content | toc | safe }}
      </div>
      <ul class="ml-auto flex flex-wrap items-center lg:justify-end list-none -mt-0.5 max-w-screen-xl">
        {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li class="inline-flex items-center h-10"><a href="{{ tagUrl }}" class="post-tag relative block text-sm">{{ tag }}</a></li>
        {%- endfor %}
      </ul>
    </section>
    <h1 class="text-5xl">{{ title }}</h1>
    <h2>{{ description }}</h2>
    {% image thumb, thumbAlt, "thumbImg object-contain object-right bg-[var(--background)]" %}

        {{ content | safe }}

        <div class="m-6 md:mx-auto max-w-prose">
          <time datetime="{{ page.date | htmlDateString }}" class="text-xs opacity-70">Last updated: {{ page.date | readableDate }}</time>
        </div>
  </article>
</div>
{%- if nextPost %}
<div class="flex">
  <div class="flex flex-col w-full md:justify-start">
    <p class="text-xs mb-4 opacity-70">Next post</p>
    <div class="flex w-full items-center md:flex-row md:justify-start">
      <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </div>
  </div>
  <button id="slideNext" title="Next" aria-controls="latestPostsList" class="md:flex absolute right-0 mr-4 left-auto bg-[var(--primary)] rounded-full md:hover:translate-x-2 transition-transform">
    <ion-icon name="arrow-forward-outline" aria-labelledby="nextBtn" class="text-4xl text-[var(--text-color-link-active)] m-2 p-2"></ion-icon>
  </button>
  <div id="nextBtn" class="sr-only">Slide to the right</div>
</div>
{% endif %}
