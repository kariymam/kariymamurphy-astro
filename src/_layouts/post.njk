---
layout: home.njk
date: Created
---
<article class="w-[calc(100%-3rem)] mx-auto mt-6 flex flex-col md:flex-row">
  <div class="w-full max-w-screen-md mx-auto posttextBlock">
      <div class="sm:relative sm:max-w-md sm:float-right">
        {% if thumb %}
        <figure class="flex flex-col p-6">
          {% image thumb, thumbAlt, "thumbImg w-full h-full top-0 flex  object-cover inset-0 rounded-3xl" %}
          <figcaption class="text-sm opacity-70">{{ thumbAlt }}</figcaption>
        </figure>
        {% endif %}
      </div>
      {{ content | safe }}
  </div>
</article>
<section class="textblock w-full">
  {%- if collections.posts %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <div class="w-[calc(100%-3rem)] mx-auto p-6 -mt-0.5 border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
    {%- if previousPost %}
            <div class="w-auto">Previous post: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></div>
                {% endif %}
    {%- if nextPost %}
    <div class="w-full lg:text-end">Next post: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}<ion-icon name="arrow-forward-outline" class="align-middle"></ion-icon></a></div>
              {% endif %}
  </div>
  {%- endif %}
  {%- endif %}
</section>