---
layout: home.njk
date: Created
---
<section class="w-full md:px-6">
  <ul class="w-full flex flex-wrap items-center gap-2 list-none px-6 border-2 rounded-3xl -mt-0.5">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
    {%- endfor %}
    <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
  </ul>
</section>
<article class="items-center md:px-6 md:pt-6">
  <div class="flex md:flex-row border-b-2">
    <div class="max-w-prose min-w-fit mb-1 p-6 md:px-9">
      <h2>{{ description }}</h2>
      <ul class="px-4 pt-4">
        <li><time>{{ work.data.dates }}</time></li>
        <li>{{ work.data.formats }}</li>
        <li>{{ work.data.audience }}</li>
      </ul>
      {{ content | safe }}
    </div>
    <div class="w-full">
      {% if thumb %}
        <figure class="flex flex-col p-6">
          {% image thumb, thumbAlt, "thumbImg w-full h-full top-0 flex  object-cover inset-0" %}
          <figcaption class="text-sm opacity-70">{{ thumbAlt }}</figcaption>
        </figure>
        {% endif %}
  </div>
  </div>
</article>