---
layout: home.njk
date: Created
---
<section class="w-full p-6 border-b-2">
  <ul class="w-full flex flex-wrap items-center gap-2 list-none">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
    {%- endfor %}
    <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
  </ul>
</section>
<article class="w-full flex flex-col items-center posttextBlock text-base">
  <header class="flex flex-col md:flex-row w-full border-b-2">
    <div class="w-full max-w-lg mb-1 p-6 md:px-9">
      <h2>{{ description }}</h2>
    </div>
    <div class="w-full">
      {% if thumb %}
      <div
      class="thumbImgContainer w-full flex items-end self-center relative h-[calc(100vh_-_12rem)]"
      >
      <figure>
        {% image thumb, thumbAlt, "thumbImg h-full w-full absolute object-cover inset-0 top-0" %}
        <figcaption class="m-4 bg-black p-2 text-white">{{ thumbAlt }}</figcaption>
      </figure>
    </div>
    {% endif %}
  </div>
</header>
      {{ content | safe }}
</article>