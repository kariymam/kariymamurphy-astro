---
layout: base.njk
date: Created
---
<aside class="w-full md:px-12 px-2 mb-12">
  <ul class="flex flex-wrap items-center list-none -mt-0.5">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
    {%- endfor %}
    <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
  </ul>
</aside>
<article class="items-center md:px-6 md:pt-6">
  <div class="flex flex-col lg:flex-row border-b-2">
    <div class="max-w-prose lg:min-w-fit mb-1 p-6 md:px-9">
      {{ content | safe }}
    </div>
    <div class="w-full">
      <h2>{{ title }}</h2>
      <ul class="px-4 pt-4">
        <li>{{ description }}</li>
      </ul>
    </div>
  </div>
</article>