---
import "../styles/footer.scss";
import FooterContact from "./FooterContact";
const links = [
  ["Github", "https://github.com/kariymam"],
  ["Behance", "https://www.behance.net/kariymam"],
  ["LinkedIn", "https://www.linkedin.com/in/kariymamurphy"],
];
const myEmail = import.meta.env.MY_EMAIL;
const count = ["one", "two", "three"];
---

<footer class="main">
  <FooterContact client:load />
  <div class="footer-background">
    <div id="footer-links">
      <div class="marquee w-screen">
        {
          count.map((num) => {
            return (
              <div class={`marquee inside flex ${num}`}>
                {links.map((link) => {
                  return <a tabindex={-1} class="hover:underline hover:text-slate-950" href={link[1]}><span>{link[0]}</span></a>;
                })}
                {links.map((link) => {
                  return <a tabindex={-1} class="hover:underline hover:text-slate-950" href={link[1]}><span>{link[0]}</span></a>;
                })}
              </div>
            );
          })
        }
      </div>
    </div>
    <hr />
    <div id="footer-image"></div>
  </div>
</footer>
