---
import Base from '../../layouts/base.astro';

export async function getStaticPaths() {
    const allPosts = Object.values(import.meta.glob('../work/*.md', { eager: true }));
    const uniqueTags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
    return uniqueTags.map((tags) => {
    const filteredPosts = allPosts.filter((post: any) => post.frontmatter.tags.includes(tags));
        return {
            params: { tags },
            props: { posts: filteredPosts },
        };
    })
}

const { tags } = Astro.params;
const { posts } = Astro.props;
---
<Base title={tags}>
  <p>Posts tagged with {tags}</p>
  <ul>
    {posts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</Base>