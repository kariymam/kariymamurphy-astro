  <header class="z-20 sticky top-0 flex w-full md:px-12 md:py-0 p-4">
    <div class="w-full flex flex-col justify-center md:flex-row gap-2 md:items-center md:justify-start">
      <a href="/" class="decoration-transparent opacity-70">
      kariyma murphy
      </a>
      {% if title %}
      <span class="hidden border-l-2 w-1 h-6 mx-1 md:block"></span>
        <h1 class="text-base sm:text-xl">{{ title }}</h1>
      {% endif %}
    </div>
    <div
      class="w-auto sm:w-full ml-auto mb-auto sm:items-center gap-8"
    >
      <div class="w-full p-0 md:py-3 sm:items-center justify-end sm:justify-between">
        <button
          id="burger"
          aria-controls="main-nav"
          aria-expanded="false"
          class="ml-auto relative block bg-[var(--primary)] p-2.5 border-2 rounded sm:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            id="burgerIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
          >
            <rect class="line top"
                  width="20" height="2"
                  x="2" y="5" rx="1"></rect>
            <rect class="line middle"
                  width="20" height="2"
                  x="2" y="11" rx="1"></rect>
            <rect class="line bottom"
                  width="20" height="2"
                  x="2" y="17" rx="1"></rect>
          </svg>
        </button>
        {% include "_partials/nav.njk" %}
      </div>
    </div>
    <div id="headerScrim" class="absolute top-0 left-0 flex w-full h-full -z-10"></div>
  </header>
  {% if layout == "post.njk" %}
  <section class="w-full md:px-12 px-2 mb-12">
    <ul class="flex flex-wrap items-center list-none -mt-0.5">
      {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
     <li class="inline-flex items-center h-10"><a href="{{ tagUrl }}" class="relative block text-sm opacity-70">{{ tag }}</a></li>
     {%- endfor %}

      <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
    </ul>
  </section>
{% endif %}
{%- if layout == "blogpage.njk" and permalink !== "/"  %}
<section id="tagDrawer" class="w-full md:px-12 px-2 mb-12">
  <div class="flex flex-wrap items-center gap-2 list-none -mt-0.5">
    <details class="rounded-3xl cursor-pointer transition-all">
      <summary class="text-base py-2 font-bold">
        Tags
      </summary>
      {% include "_partials/taglist.njk" %}
    </details>
  </div>
</section>
{% endif %}
{% if layout == "work.njk" %}
<section class="w-full md:px-12 px-2 mb-12">
  <ul class="flex flex-wrap items-center list-none -mt-0.5">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
    {%- endfor %}
    <li class="justify-end ml-auto"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
  </ul>
</section>
{% endif %}