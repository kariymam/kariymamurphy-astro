  <header class="flex flex-col-reverse md:flex-row md:mx-6 md:mt-6 p-6 rounded-3xl lg:hover:bg-[var(--color-gray-3)] transition-colors border-2">
    {%- if layout == "blogpage.njk" and permalink !== "/"  %}
    <div class="w-full">
      <div id="tagDrawer" class="pt-6 md:p-0 md:my-auto">
        <h1>{{ title }}</h1>
          <details class="rounded-3xl md:p-0 cursor-pointer transition-all" {%- if title != "All blog posts" %}open{%- endif -%}>
            <summary class="text-base pt-2 md:ml-2">
              Tags
            </summary>
            {% include "_partials/taglist.njk" %}
          </details>
      </div>
    </div>
    {% elif layout == "post.njk" %}
    <div class="w-auto flex-col gap-2">
      <a href="/blog/">Blog</a> &#x2215;
      <h1>{{ title }}</h1>
      <h2>{{ description }}</h2>
      <ul class="flex items-center">
        <li class="mr-2"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
        {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag text-xs relative block px-2 rounded-full">{{ tag }}</a></li>
        {%- endfor %}
      </ul>
    </div>
    {% else %}
    <div class="w-auto">
      <h1>{{ title }}</h1>
    </div>
    {% endif %}
    <div
      class="w-full ml-auto mb-auto md:w-auto md:items-center gap-8"
    >
      <div class="w-full md:p-0 md:items-center justify-end md:justify-between">
        <button
          id="burger"
          aria-controls="main-nav"
          aria-expanded="false"
          class="ml-auto relative block border-2-[var(--primary)] p-2.5 border-2 rounded md:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            id="burgerIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
          >
            <rect class="line top"
                  width="20" height="2"
                  x="2" y="5" rx="1"></rect>
            <rect class="line middle"
                  width="20" height="2"
                  x="2" y="11" rx="1"></rect>
            <rect class="line bottom"
                  width="20" height="2"
                  x="2" y="17" rx="1"></rect>
          </svg>
        </button>
        {% include "_partials/nav.njk" %}
      </div>
    </div>
  </header>
