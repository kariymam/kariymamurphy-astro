  <header class="rounded-3xl border my-2 bg-[var(--background)] z-10 top-0 left-0 right-0 {% if layout !== 'work.njk' %}sticky {% else %}sticky sm:relative {% endif %} flex lg:mx-6">
    <div class="w-full flex-col sm:flex-row sm:items-center flex gap-2 sm:justify-start py-4 px-6">
      <div class="flex gap-2 items-center">
      <a href="/" class="sm:block decoration-transparent self-start {% if permalink !== "/" %}hidden opacity-70{% endif %}">
      kariyma murphy
      </a>
      {% if title and permalink !== "/" %}
          <span class="{% if permalink !== "/" %}sm:block{% endif %} hidden opacity-70">|</span>
          <h1 class="text-base self-start">{{ title }}</h1>
          {% endif %}
        </div>
    </div>
    <div
      class="w-auto sm:w-full ml-auto sm:items-center gap-8 py-4 px-6"
    >
      <div class="w-full p-0">
        <button
          id="burger"
          aria-controls="main-nav"
          aria-expanded="false"
          class="ml-auto relative block p-2.5 rounded sm:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            id="burgerIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
          >
            <rect class="line top"
                  width="20" height="2"
                  x="2" y="5" rx="1"></rect>
            <rect class="line middle"
                  width="20" height="2"
                  x="2" y="11" rx="1"></rect>
            <rect class="line bottom"
                  width="20" height="2"
                  x="2" y="17" rx="1"></rect>
          </svg>
        </button>
        {% include "_partials/nav.njk" %}
      </div>
    </div>
    <div id="headerScrim" class="absolute top-0 left-0 flex w-full h-full -z-10"></div>
  </header>