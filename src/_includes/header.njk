  <header class="flex flex-col-reverse md:flex-row md:mx-6 md:mt-6 p-6 rounded-3xl">
    <div class="w-auto flex flex-col md:flex-row gap-3 items-center justify-center">
    {%- if layout == "blogpage.njk" and permalink !== "/" or layout == "post.njk" %}
      <a href="/blog/" class="decoration-transparent opacity-50">Blog</a><span class="hidden border-l-2 w-1 h-6 mx-1 md:block"></span>
      <h1 class="text-xl sm:text-3xl">{{ title }}</h1>
    {% else %}
      <h1 class="text-xl sm:text-3xl">{{ title }}</h1>
    {% endif %}
    </div>
    <div
      class="w-full ml-auto mb-auto md:w-auto md:items-center gap-8"
    >
      <div class="w-full p-0 md:p-3 md:items-center justify-end md:justify-between">
        <button
          id="burger"
          aria-controls="main-nav"
          aria-expanded="false"
          class="ml-auto relative block bg-[var(--primary)] p-2.5 border-2 rounded md:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            id="burgerIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
          >
            <rect class="line top"
                  width="20" height="2"
                  x="2" y="5" rx="1"></rect>
            <rect class="line middle"
                  width="20" height="2"
                  x="2" y="11" rx="1"></rect>
            <rect class="line bottom"
                  width="20" height="2"
                  x="2" y="17" rx="1"></rect>
          </svg>
        </button>
        {% include "_partials/nav.njk" %}
      </div>
    </div>
  </header>
