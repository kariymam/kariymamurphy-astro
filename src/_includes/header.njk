  <header id="navContainer" class="flex flex-col-reverse md:flex-row mx-6 mt-6 p-6 rounded-3xl lg:hover:bg-[var(--color-gray-3)] transition-colors border-2">
    {%- if layout == "blogpage.njk" and permalink !== "/"  %}
    <div class="w-full">
      <div id="tagDrawer" class="pt-6 md:p-0 md:my-auto">
          <details class="rounded-3xl md:p-0 cursor-pointer transition-all" {%- if title != "All blog posts" %}open{%- endif -%}>
            <summary class="text-base md:ml-2">
              Tags
            </summary>
            {% include "_partials/taglist.njk" %}
          </details>
      </div>
    </div>
    {% elif layout == "post.njk" %}
    <div class="w-auto flex-col gap-2">
      <a href="/blog/">Blog</a> &#x2215;
      <h1>{{ title }}</h1>
      <h2>{{ description }}</h2>
      <ul class="flex items-center">
        <li class="mr-2"><time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time></li>
        {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li class="inline-block"><a href="{{ tagUrl }}" class="post-tag text-xs relative block px-2 rounded-full">{{ tag }}</a></li>
        {%- endfor %}
      </ul>
    </div>
    {% else %}
    <div class="w-auto">
      <h1>{{ title }}</h1>
    </div>
    {% endif %}
    <div
      class="w-full ml-auto mb-auto md:w-auto md:items-center gap-8"
    >
      <div class="w-full md:p-0 md:items-center justify-end md:justify-between">
        <button
          id="burger"
          class="ml-auto relative block rounded bg-gray-100 p-2.5 text-gray-600 transition hover:text-gray-600/75 md:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
        {% include "_partials/nav.njk" %}
      </div>
    </div>
  </header>
