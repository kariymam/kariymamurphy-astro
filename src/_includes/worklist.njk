<section reversed class="postlist m-6 grid gap-2 grid-flow-row-dense md:grid-cols-2 lg:grid-flow-row" style="counter-reset: start-from {{ (portfolio.length) + 1 }}"
>
{% asyncEach work in portfolio | reverse %}
  {% set articleUrl = work.url %}
  {% set articleDate = work.date %}
  {% set articleTitle = work.data.title %}
  {% set articleDescription = work.data.description %}
  {% set articleImg = work.data.thumb %}
  {% set articleImgAlt = work.data.thumbAlt %}
  {% set articleTags = work.data.tags %}
  {% include "_partials/postlistCard.njk" %}
{% endeach %}
</section>